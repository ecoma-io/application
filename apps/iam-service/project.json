{
  "name": "iam-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/iam-service/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "webpack-cli build",
        "args": [
          "node-env=production"
        ]
      },
      "configurations": {
        "development": {
          "args": [
            "node-env=development"
          ]
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": [
        "build"
      ],
      "options": {
        "inspect": false,
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "build:development"
        },
        "production": {
          "buildTarget": "build:production"
        }
      }
    },
    "containerize": {
      "dependsOn": [
        "build"
      ],
      "executor": "@nx-tools/nx-container:build",
      "configurations": {
        "development": {
          "target": "debug",
          "tags": ["{projectName}"],
          "load": true
        },
        "production": {
          "target": "debug",
          "push": true
        }
      },
      "defaultConfiguration": "development"
    },
    "helm": {
      "executor": "@nx-extensions/helm:package",
      "outputs": [
        "{options.outputFolder}"
      ],
      "options": {
        "chartFolder": "{projectRoot}/chart",
        "outputFolder": "{workspaceRoot}/dist/charts/{projectName}",
        "push": false,
        "remote": "oci://ghcr.io/ecoma-io/charts",
        "dependencies": {
          "update": true,
          "build": true,
          "repositories": []
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}",
        "parallel": false,
        "commands": [
          "INPUT_TAGS=ghcr.io/ecoma-io/{projectName}:$(cat {projectRoot}/version.txt) npx nx containerize {projectName} -c production",
          "npx nx helm {projectName} --push"
        ]
      }
    }
  }
}