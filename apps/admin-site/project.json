{
  "name": "admin-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/admin-site/src",
  "tags": ["type:site"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts"
      }
    },
    "browser": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/{projectRoot}/browser",
        "index": "{projectRoot}/src/index.html",
        "main": "{projectRoot}/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "{projectRoot}/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "{projectRoot}/public"
          }
        ],
        "styles": ["{projectRoot}/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "disableHostCheck": true,
        "host": "0.0.0.0",
        "port": 4202,
        "buildTarget": "{projectName}:browser:development"
      }
    },
    "build": {
      "dependsOn": ["browser"],
      "executor": "@angular-devkit/build-angular:server",
      "options": {
        "outputPath": "dist/{projectRoot}/server",
        "main": "{projectRoot}/src/server.ts",
        "tsConfig": "{projectRoot}/tsconfig.server.json",
        "inlineStyleLanguage": "scss"
      },
      "configurations": {
        "production": {
          "outputHashing": "media"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "sourceMap": true,
          "extractLicenses": false,
          "vendorChunk": true
        }
      },
      "defaultConfiguration": "production"
    },
    "ssr": {
      "executor": "@angular-devkit/build-angular:ssr-dev-server",
      "options": {
        "port": 4202,
        "browserTarget": "{projectName}:browser:development",
        "serverTarget": "{projectName}:build:development"
      }
    },
    "containerize": {
      "dependsOn": ["build"],
      "executor": "@nx-tools/nx-container:build",
      "configurations": {
        "development": {
          "target": "debug"
        },
        "production": {
          "target": "debug",
          "push": true
        }
      },
      "defaultConfiguration": "development"
    },
    "helm": {
      "executor": "@nx-extensions/helm:package",
      "outputs": ["{options.outputFolder}"],
      "options": {
        "chartFolder": "{projectRoot}/chart",
        "outputFolder": "{workspaceRoot}/dist/charts/{projectName}",
        "push": false,
        "remote": "oci://ghcr.io/ecoma-io/charts",
        "dependencies": {
          "update": true,
          "build": true,
          "repositories": []
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}",
        "parallel": false,
        "commands": [
          "INPUT_TAGS=ghcr.io/ecoma-io/{projectName}:$(cat {projectRoot}/version.txt) npx nx containerize {projectName} -c production",
          "npx nx helm {projectName} --push"
        ]
      }
    }
  }
}
