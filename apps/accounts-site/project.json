{
  "name": "accounts-site",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/accounts-site/src",
  "tags": ["type:site"],
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/nge-cookie/jest.config.ts"
      }
    },
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/accounts-site",
        "index": "apps/accounts-site/src/index.html",
        "main": "apps/accounts-site/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/accounts-site/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/accounts-site/public"
          }
        ],
        "styles": ["apps/accounts-site/src/styles.scss"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "disableHostCheck": true,
        "host": "0.0.0.0",
        "port": 4201,
        "buildTarget": "accounts-site:build:development"
      }
    },
    "containerize": {
      "dependsOn": ["build"],
      "executor": "@nx-tools/nx-container:build",
      "configurations": {
        "development": {},
        "production": {
          "push": true
        }
      },
      "defaultConfiguration": "development"
    },
    "helm": {
      "executor": "@nx-extensions/helm:package",
      "outputs": ["{options.outputFolder}"],
      "options": {
        "chartFolder": "{projectRoot}/chart",
        "outputFolder": "{workspaceRoot}/dist/charts/{projectName}",
        "push": false,
        "remote": "oci://ghcr.io/ecoma-io/charts",
        "dependencies": {
          "update": true,
          "build": true,
          "repositories": []
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}",
        "parallel": false,
        "commands": [
          "INPUT_TAGS=ghcr.io/ecoma-io/{projectName}:$(cat {projectRoot}/version.txt) npx nx containerize {projectName} -c production",
          "npx nx helm {projectName} --push"
        ]
      }
    }
  }
}
